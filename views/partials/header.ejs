<header class="border-bottom p-2 d-flex justify-content-between align-items-center bg-white sticky-top">
  <div class="d-flex align-items-center gap-2">
    <!-- Mobile menu toggle -->
    <button class="btn btn-outline-secondary btn-sm sidebar-toggle" onclick="toggleSidebar()">
      <i class="bi bi-list fs-5"></i>
    </button>

    <!-- Breadcrumb / Page title (optional) -->
    <nav aria-label="breadcrumb" class="d-none d-md-block">
      <ol class="breadcrumb mb-0 small">
        <li class="breadcrumb-item"><a href="/admin" class="text-decoration-none">Admin</a></li>
        <li class="breadcrumb-item active" aria-current="page">
          <%= title || 'Dashboard' %>
        </li>
      </ol>
    </nav>
  </div>

  <div class="d-flex gap-2 align-items-center">
    <!-- View Site button -->
    <a class="btn btn-outline-primary btn-sm" href="http://localhost:3000" target="_blank">
      <i class="bi bi-box-arrow-up-right me-1 d-none d-sm-inline"></i>
      <span class="d-none d-sm-inline">View Site</span>
      <i class="bi bi-globe d-sm-none"></i>
    </a>
  </div>
</header>