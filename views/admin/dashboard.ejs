<div class="row g-3 mb-4">
  <div class="col-6 col-lg-3">
    <div class="card bg-primary text-white h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1 small">Total News</h6>
            <h3 class="mb-0">
              <%= stats.totalNews %>
            </h3>
          </div>
          <i class="bi bi-newspaper fs-2 fs-lg-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg-3">
    <div class="card bg-success text-white h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1 small">Published</h6>
            <h3 class="mb-0">
              <%= stats.publishedNews %>
            </h3>
          </div>
          <i class="bi bi-check-circle fs-2 fs-lg-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg-3">
    <div class="card bg-warning text-dark h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1 small">Draft</h6>
            <h3 class="mb-0">
              <%= stats.draftNews %>
            </h3>
          </div>
          <i class="bi bi-pencil-square fs-2 fs-lg-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 col-lg-3">
    <div class="card bg-info text-white h-100">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h6 class="card-title mb-1 small">Total Views</h6>
            <h3 class="mb-0">
              <%= stats.totalViews %>
            </h3>
          </div>
          <i class="bi bi-eye fs-2 fs-lg-1 opacity-50"></i>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row g-3">
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card h-100">
      <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
        <span><i class="bi bi-house-door me-2"></i>Homepage</span>
        <span class="badge bg-<%= stats.homepageStatus === 'published' ? 'success' : 'warning' %>">
          <%= stats.homepageStatus %>
        </span>
      </div>
      <div class="card-body">
        <p class="text-muted mb-3 small">Manage hero section, features, and SEO settings.</p>
        <a href="/admin/homepage" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-pencil me-1"></i>Edit
        </a>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card h-100">
      <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
        <span><i class="bi bi-info-circle me-2"></i>About Us</span>
        <span class="badge bg-<%= stats.aboutStatus === 'published' ? 'success' : 'warning' %>">
          <%= stats.aboutStatus %>
        </span>
      </div>
      <div class="card-body">
        <p class="text-muted mb-3 small">Manage about page content and sections.</p>
        <a href="/admin/about" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-pencil me-1"></i>Edit
        </a>
      </div>
    </div>
  </div>
  <div class="col-12 col-md-6 col-lg-4">
    <div class="card h-100">
      <div class="card-header d-flex justify-content-between align-items-center flex-wrap gap-2">
        <span><i class="bi bi-envelope me-2"></i>Contact</span>
        <span class="badge bg-<%= stats.contactStatus === 'published' ? 'success' : 'warning' %>">
          <%= stats.contactStatus %>
        </span>
      </div>
      <div class="card-body">
        <p class="text-muted mb-3 small">Manage contact information and settings.</p>
        <a href="/admin/contact" class="btn btn-outline-primary btn-sm">
          <i class="bi bi-pencil me-1"></i>Edit
        </a>
      </div>
    </div>
  </div>
</div>